{# Button Macro #}
{% macro button(text, url, style="primary") %}
  <a href="{{ url }}" class="inline-block {% if style == 'primary' %}bg-peach hover:bg-purp{% else %}bg-purp hover:bg-peach{% endif %} text-white font-sans font-black text-lg uppercase py-2 px-4 rounded-lg transition-colors">
    {{ text }}
  </a>
{% endmacro %}

{# Card Macro #}
{% macro card(title, content) %}
  <div class="bg-white shadow-lg rounded-lg p-6 hover:shadow-xl transition-shadow">
    <h3 class="text-2xl font-bold text-purp mb-4">{{ title }}</h3>
    <div class="text-gray-700">{{ content | safe }}</div>
  </div>
{% endmacro %}